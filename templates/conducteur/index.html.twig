{% extends 'base.html.twig' %}

{% block title %}Conducteur index{% endblock %}

{% block body %}
    <h1>Conducteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conducteur in conducteurs %}
            <tr>
                <td>{{ conducteur.id_conducteur }}</td>
                <td>{{ conducteur.prenom }}</td>
                <td>{{ conducteur.nom }}</td>
                <td>
                    <a href="{{ path('conducteur_show', {'id': conducteur.id_conducteur}) }}">show</a>
                    <a href="{{ path('conducteur_edit', {'id': conducteur.id_conducteur}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('conducteur_new') }}">Create new</a>
{% endblock %}
